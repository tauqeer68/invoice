<div class="row">
     <h1>Listing invoices</h1>
     <div class="pull-right range-query">
       <%= form_tag invoices_path, method: :get do %>
        <%=text_field_tag 'search[date_from]', @search.date_from %>
         <%= text_field_tag 'search[date_to]', @search.date_to %>
         <%= submit_tag 'Search', class: 'btn search-button' %>
         <% end %>
     </div>
</div>

<h1>Invoices</h1>

<div class ="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Company</th>
          <th>Tax</th>
          <th>Salesperson</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    </table>

</div>
<div id="invoices">
  <tbody>
  <% @invoices.each do |invoice| %>
    <tr>
     <td><%= invoice.date %></td>
     <td><%= invoice.company %></td>
     <td><%= invoice.tax %></td>
     <td><%= invoice.employee.name %></td>
    </tr>
      <p>
      <%= link_to "Show this invoice", invoice %>
    </p>
  <% end %>
  </tbody>
</div>

<%= link_to "New invoice", new_invoice_path %>
</div>